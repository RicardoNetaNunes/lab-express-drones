<h2>Update the drone</h2>

<form method="POST" action="/drones/{{drone._id}}/edit">
  <div class="mb-3">
    <label class="form-label" >Name</label>
    <input class="form-control" value="{{drone.name}}" type="text" name="name">
    <br>
    <label class="form-label" >Propellers</label>
    <input class="form-control" value="{{drone.propellers}}" type="number" name="propellers">
    <br>
    <label class="form-label" >MaxSpeed</label>
    <input class="form-control" value="{{drone.maxSpeed}}" type="speed" name="maxSpeed">
    <br>
    <button class="btn btn-primary" type="submit">Change</button>
  </div>
</form>